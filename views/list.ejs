<%- include("header"); -%>

    <div class="box" id="heading">

          <h1><%=listTitle %></h1>

    </div>

    <div class="box">
        <% newListItems.forEach(item => {  %>
        <div class="item">
        <input type="checkbox" ><p><%= item %></p>
        </div>
        <% }); %>

        <form class="item" action="/" method="POST">
          <input type="text" name="todo" id="todo" class="" placeholder="New Item" autocomplete="off">
          <button type="submit" id="todoType" class="" name="todoType" value="<%=listTitle %>">+</button>
        </form>

    </div>


<%- include("footer"); -%>
